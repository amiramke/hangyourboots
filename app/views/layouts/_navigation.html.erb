<%= link_to "Home", houses_path, :class => 'brand' %>

<div class="pull-right">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out",
                signout_path,
                id: "sign_out",
                :class => "btn btn-mini btn-success" %>
  <% else %>
    <%= link_to "Sign in with Facebook",
                "/auth/facebook",
                id: "sign_in",
                :class => "btn btn-mini btn-success" %>
  <% end %>
</div>

