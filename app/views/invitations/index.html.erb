<div>
<%= link_to "New invitation", new_invitation_path %>
</div>


<table>
  <tr>
    <th>Code</th>
    <th>Expiration date</th>
    <th>Cohort</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |i| %>
  <tr>
    <td><%= i.code %></td>
    <td><%= i.cohort.name %></td>
    <td><%= i.expires_at.strftime("%b %d %Y") %></td>
    <td><%= link_to 'Show', invitation_path(i) %></td>
    <td><%= link_to 'Edit', edit_invitation_path(i) %></td>
    <td><%= link_to 'Destroy', i, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
